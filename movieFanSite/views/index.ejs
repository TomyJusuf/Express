<!DOCTYPE html>
<html>
  <head>
    <title>Movie App</title>
    <% include head %>
  </head>
  <body>
    <% include navbar %>

    <div class="container">
      <div class="row">
        <div class="col-sm-12">
          <h1>Now Playing</h1>
        </div>
      </div>

      <div class="row">
        <% parseData.forEach((movie) => { %> <% if (movie.poster_path ) { %>
        <div class="col-md-3 col-sm-4 poster">
          <a href="/movie/<%= movie.id %>">
            <img
              src="<%= imageBaseUrl + movie.poster_path %>"
              alt="<%= movie.title %> poster"
            />
          </a>
          <h4><%= movie.title %></h4>
        </div>
        <% } %> <% if(movie.profile_path) { %>
        <div class="col-md-3 col-sm-4 poster">
          <a href="/person/<%= movie.id %>">
            <img
              src="<%= imageBaseUrl + movie.profile_path %>"
              alt="<%= movie.name %> poster"
            />
          </a>
          <h4><%= movie.name %></h4>
        </div>
        <% } %> <% }); %>
      </div>
    </div>
  </body>
</html>
